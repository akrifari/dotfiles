# split tmux's window
#   @param $1 -h (horizontally) or -v (vertically)
#   @param $2 any number between 0 and 100
function tsp() {
  tmux split-window $1 -p $2
}

# check service status
#   @param $1 service name
function status() {
  systemctl status $1
}

# start service
#   @param $1 service name
function start() {
  systemctl start $1
}

# stop service
#   @param $1 service name
function stop() {
  systemctl stop $1
}
