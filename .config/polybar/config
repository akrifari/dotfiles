[bar/mybar]
monitor = ${env:MONITOR:}
width = 100%
height = 18
fixed-center = true

background = ${xrdb:background}
foreground = ${xrdb:foreground}

line-size = 2

border-top-size = 4
border-color = ${xrdb:background}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Meslo LG S DZ for Powerline:size=8
font-1 = Font Awesome 6 Free Regular:pixelsize=10;1
font-2 = Font Awesome 6 Free Solid:pixelsize=10;1
font-3 = Font Awesome 6 Brands:pixelsize=10;1

modules-left = i3
modules-center = date
modules-right = fs-root fs-home alsa pulseaudio wlan eth battery

[fs-base]
type = internal/fs
interval = 25

format-mounted-prefix = ${self.mount-0}
format-mounted-prefix-foreground = ${xrdb:color4}
label-mounted = " %percentage_used%%"

[module/fs-root]
inherit = fs-base
mount-0 = /

[module/fs-home]
inherit = fs-base
mount-0 = /home

[module/i3]
type = internal/i3

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-default = 

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${xrdb:color4}

; focused = active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${xrdb:background}
label-focused-foreground = ${xrdb:color4}
label-focused-padding = 2

; unfocused = inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${self.label-focused-padding}

; visible = active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${xrdb:background}
label-urgent-foreground = ${xrdb:color1}
label-urgent-padding = ${self.label-focused-padding}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid:0:5:%

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 

ramp-signal-0-foreground = ${xrdb:color1}
ramp-signal-1-foreground = ${xrdb:color3}
ramp-signal-2-foreground = ${xrdb:color2}

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-prefix = "eth "
format-connected-prefix-foreground = ${xrdb:foreground}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = "%a, %b %d, %Y"
time = %H:%M
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix-foreground = ${xrdb:color4}
format-volume = <label-volume> <bar-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = muted
label-muted-foreground = ${xrdb:color1}

bar-volume-width = 10
bar-volume-foreground-0 = ${xrdb:color4}
bar-volume-gradient = false
bar-volume-indicator = █
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${xrdb:color8}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100

format-charging = <animation-charging> <label-charging>
format-discharging = <animation-discharging> <label-discharging>
format-full-prefix = " "
format-full-prefix-foreground = ${xrdb:color2}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${xrdb:color4}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-foreground = ${xrdb:color1}
animation-discharging-framerate = 700

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

